@{
    ViewBag.Title = "Registration Page";
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6 mx-auto">
                    <div class="card border-secondary">
                        <div class="card-header" style="background-color:cadetblue">
                            <h3 class="mb-0 my-2" style="text-align:center; color:white;">Enter Your Information</h3>
                        </div>
                        <div class="card-body">



                            <div class="form-group">

                            </div>
                            <div class="form-group">
                                <div class="form-inline">
                                    <label for="name" class="col-md-3" style="justify-content:flex-start;">Name:</label>
                                    <input type="text" class="form-control col-md-9" id="name" name="name" placeholder="Enter Full Name">

                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-inline">
                                    <label for="email" class="col-md-3" style="justify-content:flex-start;">Email:</label>
                                    <input type="email" class="form-control col-md-9" id="email" name="email" placeholder="email@gmail.com" required="">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-inline">
                                    <label for="password" class="col-md-3" style="justify-content:flex-start;">Password:</label>
                                    <input type="password" class="form-control col-md-9" id="password" name="password" placeholder="password" title="At least 6 characters with letters and numbers" required="">
                                </div>
                            </div>

                            <div class="form-group">
                                @*<img id="userImage" class="img-thumbnail rounded-circle" src="~/Images/chat.png" />*@
                                <div id="userImage" style="height:150px; width:150px; border-radius:50%; background-image: url('../../Images/chat.png'); background-position:center; background-size:cover;"></div>
                                <br />

                                <div class="custom-file">
                                    <input type="file" class="custom-file-input" id="validatedCustomFile" required>
                                    <label class="custom-file-label" id="lblValidatedCustomFile" for="validatedCustomFile">Choose your avatar...</label>
                                    <div class="invalid-feedback">Example invalid custom file feedback</div>
                                </div>

                            </div>

                        </div>
                            <div class="card-footer">
                                <span id="userMessage" name="userMessage" class="text-success float-left"></span>
                                <br />
                                <button type="submit" id="register" name="register" class="btn btn-info" style="padding:.5rem 13.5rem;">Register</button>
                            </div>
                        </div>
                </div>
            </div>
        </div>
    </div>
</div>